{
	"extends": "../tsconfig-common.json",
	"ts-node": {
         "require": ["tsconfig-paths/register"]
    },
	"compilerOptions": {
		"module": "NodeNext",
		"outDir": "../../bin",
		"baseUrl": ".",
		"rootDir": ".",
		"paths": {
			"@/math/*": ["math/*"],
			"@/tools/*": ["tools/*"]
		}
	},
	"include": [
		"**/next-env.d.ts",
		"**/*.ts"
	],
	"exclude": [
		"**/node_modules/*",
		"bin"
	]
}